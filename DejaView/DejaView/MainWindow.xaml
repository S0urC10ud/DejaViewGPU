<Window x:Class="DejaView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DejaView"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnSelectDirectory" Content="Select Directory" Width="150" Height="30" Click="btnSelectDirectory_Click"/>
            <TextBlock x:Name="txtSelectedDirectory" Text="No directory selected" FontSize="14" TextWrapping="Wrap"/>
            <Button x:Name="btnStartProcessing" Content="Start Processing" Width="150" Height="30" Click="btnStartProcessing_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
